{
  "compilerOptions": {
    // Build settings
    "declaration": true,
    "target": "es5",
    "outDir": "dist",
    // Language settings
    "moduleResolution": "node",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "lib": ["es7", "es6", "dom"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
